{% extends "layouts/admin.twig" %}
{% block content %}
    <h2 class="headline">Speakers</h2>
    <form method="get" class="form-inline" role="form">
        <div class="form-group">
            <label>Search: </label>
            <input tabindex="1" type="text" name="search" class="form-inline"{% if search is defined %} value="{{ search }}"{% endif %}>
        </div>
        <button type="submit" class="btn btn-default">Go</button>
    </form>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th align='left'><b>Full Name</b></th>
                    <th align='left'><b>Company</b></th>
                    <th align='left'><b>Twitter</b></th>
                    <th align='left'><b>Email</b></th>
                    <th align='left'><b>Airport</b></th>
                    <th align='left'><b>Created On</b></th>
                </tr>
            </thead>
            <tbody>
                {% for speaker in speakers %}
                    <tr>
                        <td><a href="{{ url('admin_speaker_view', { id: speaker.id }) }}">{{ speaker.first_name }} {{ speaker.last_name }}</a></td>
                        <td>{{ speaker.company }}</td>
                        <td>{{ speaker.twitter }}</td>
                        <td><a href="mailto:{{ speaker.email }}">{{ speaker.email }}</a></td>
                        <td>{% if speaker.airport.code %}<a href="https://www.google.com/flights/#search;f={{ speaker.airport.code|upper }};t={{ airport|upper }};d={{ arrival }};r={{ departure }}" target="_blank">Flight Cost</a> from {{ speaker.airport.code }}<br/><span style="font-size: 14px; color: #888">{{ speaker.airport.name }}, {{ speaker.airport.country }}</span>{% else %}Not Provided{% endif %}</td>
                        <td>{{ speaker.created_at|date("F jS \\a\\t g:ia T") }}</td>
                        <td>
                            {% if speaker.is_admin == false %}
                            <a href="{{ url('admin_admin_promote', { id: speaker.id }) }}" onClick="return confirm('Are you sure you want promote this user as an admin?');">Make Admin</a>
                            {% else %}Admin{% endif %}
                            <a href="{{ url('admin_speaker_delete', { id: speaker.id }) }}" onClick="return confirm('Are you sure you want to delete this user');">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {{ pagination|raw }}
{% endblock %}
